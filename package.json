{
  "name": "typescript-vibecoding-project",
  "version": "1.0.0",
  "description": "A TypeScript project set up for vibecoding with Biome, pnpm, and Vitest",
  "main": "dist/index.js",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --write",
    "format": "biome format src/ --write",
    "format:check": "biome format src/",
    "check": "biome check src/",
    "check:fix": "biome check src/ --write",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run typecheck && pnpm run check && pnpm run test:run",
    "prepare": "is-ci || husky"
  },
  "keywords": ["typescript", "vibecoding", "development", "biome", "pnpm", "vitest"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.16.2",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5"
  },
  "dependencies": {}
}
